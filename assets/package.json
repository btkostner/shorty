    "watch": "tailwindcss --postcss --input=styles/main.css --output=../priv/static/assets/main.css --watch"
  },
  "dependencies": {
    "alpinejs": "^3.2.4",
    "autoprefixer": "^10.3.3",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.7"
  },
  "devDependencies": {
    "standard": "^16.0.3"
  }
}
